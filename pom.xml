                                <artifactId>${jdbc.artifactId}</artifactId>
                                <version>${jdbc.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
            <pluginRepositories>
                <pluginRepository>
                    <id>springfuse-repository</id>
                    <url>http://maven2.springfuse.com</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
